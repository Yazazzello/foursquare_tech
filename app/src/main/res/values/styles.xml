<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="venueButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_selector</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textWithShadow">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
